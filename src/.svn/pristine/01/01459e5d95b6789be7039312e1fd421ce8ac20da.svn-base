@import '../../common/base';
@import '../../common/reset';
@import '../../component/head';
@import '../../component/foot';

.pay_logo {
    height:100px;
    .pic {
        background: #666;
		width: 350px;
        height:80px;
        margin-top:10px;
        img {
            width:100%;
        }
    }
    .line {
        height: 35px;
        width: 2px;
        margin-left: 20px;
        margin-right: 20px;
        background: #ccc;
        margin-top: 32px;
    }
    .title {
        font-size:22px;
        color:#333333;
        line-height:22px;
        margin-top: 36px;
    }
    .step {
        height: 100px;
        position: relative;
        width: 473px;
        .step_gray {
            position: absolute;
            top:80%;
            left:0;
            margin-top:-45px;
            overflow: hidden;
        }
        .step_orange {
            overflow: hidden;
            position: absolute;
            top:80%;
            left:0;
            margin-top:-45px;
            transition:all .5s;
            &.step_0 {
                width: 0;
            }
            &.step_1 {
                width: 105px;
            }
            &.step_2 {
                width: 245px;
            }
            &.step_3 {
                width: 385px;
            }
            &.step_4 {
                width: 480px;
            }
        }
    }
}

.pay_state {
    background:#ffffff;
    box-shadow:0 1px 1px 0 #e5e5e5;
    width:1200px;
    height:154px;
    border-top: 4px solid #ffb84e;
    &>div {
        padding-left: 211px;
        margin-top:20px;
        &:nth-child(1){
            margin-bottom: 10px;
            position: relative;
            i {
                color: #83ca54;
                width: 26px;
                height: 26px;
                font-size: 26px;
                position: absolute;
                top:0;
                left: 175px;
            }
            p {
                font-family:MicrosoftYaHei;
                font-size:22px;
                color:#333333;
                line-height:22px;
                text-align:left;
            }
        };
        &:nth-child(2) {
            margin-bottom:20px;
            p {
                font-family:MicrosoftYaHei;
                font-size:16px;
                color:#333333;
                line-height:16px;
                text-align:left;
            }
        }
        &:nth-child(3) {
            .order_num {
                font-family:MicrosoftYaHei;
                font-size:16px;
                color:#666666;
                line-height:16px;
                text-align:left;
                span {
                    color: #ffb84e;
                }
            }
            .price {
                font-family:MicrosoftYaHei;
                font-size:16px;
                color:#666666;
                line-height:16px;
                text-align:left;
                margin-right: 170px;
                span {
                    font-family:MicrosoftYaHei-Bold;
                    font-size:22px;
                    color:#ff3c23;
                    line-height:22px;
                    text-align:left;
                }
            }
        }
    }
}