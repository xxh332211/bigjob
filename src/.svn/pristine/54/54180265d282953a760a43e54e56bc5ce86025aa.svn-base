@import '../../common/base';
@import '../../common/reset';
@import '../../common/iconfont';
html {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 800px;
}

body {
    position: relative;
    width: 100%;
    height: 100%;
    background: linear-gradient(-80deg, #f5b426 7%, #ea816e 100%);
    min-height: 800px;
}

.main {
    height: 670px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -532px;
    margin-top: -335px;
    z-index: 1;
    width: 1065px;
    transition: all 1s;
    &.temphide {
        top: -100%;
        transition: all 1s;
    }
    .title {
        height: 60px;
        font-size: 60px;
        line-height: 1;
        letter-spacing: 6px;
        text-align: center;
        color: #ffffff;
    }
    .panel {
        margin-top: 106px;
        height: 503px;
        &>div {
            width: 325px;
            height: 503px;
            float: left;
            margin-right: 45px;
            position: absolute;
            margin-left: 0px;
            img {
                width: 100;
                position: absolute;
                left: 50%;
                top: 50%;
                transform: scale(1, 1) translate(-50%, -50%);
                transition: transform .3s;
            }
            i {
                position: absolute;
                width: 85px;
                height: 85px;
                font-size: 170px;
                text-indent: -51px;
                line-height: 102px;
                bottom: 140px;
                left: 50%;
                margin-left: -42px;
                transition: all .3s;
                background: #fff;
                border-radius: 100%;
                cursor: pointer;
            }
            &:nth-child(1) {
                left: 0;
                i {
                    color: #f05576;
                    &:hover {
                        color: #cb2e50;
                    }
                }
            }
            &:nth-child(2) {
                left: 370px;
                i {
                    color: #ffd40d;
                    &:hover {
                        color: #e1bb0d;
                    }
                }
            }
            &:nth-child(3) {
                left: 740px;
                i {
                    color: #84a7ff;
                    &:hover {
                        color: #486dca;
                    }
                }
            }
            &:hover {
                i {
                    margin-left: -47px;
                    width: 90px;
                    height: 90px;
                    font-size: 180px;
                    bottom: 130px;
                    transition: all .3s;
                }
                img {
                    left: 50%;
                    top: 50%;
                    transform: translate(-50%, -50%) scale(1.1, 1.1);
                    transition: transform .3s;
                }
            }
        }
    }
}

.insidepage {
    width: 1111px;
    height: 768px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -532px;
    margin-top: -390px;
    z-index: 1;
    transition: all 1s;
    &.temphide {
        top: -100%;
        transition: all 1s;
    }
    .backout {
        position: absolute;
        top: 0;
        right: 25px;
        width: 142px;
        height: 48px;
        border-radius: 5px;
        background-color: rgba(255, 255, 255, 0.3);
        font-size: 24px;
        line-height: 48px;
        text-align: center;
        color: #ffffff;
        cursor: pointer;
    }
    .title {
        height: 60px;
        font-size: 60px;
        line-height: 1;
        letter-spacing: 6px;
        text-align: left;
        color: #ffffff;
        text-indent: 20px;
    }
    .content {
        height: 649px;
        margin-top: 22px;
        overflow: hidden;
        position: relative;
        .iconfont {
            font-size: 80px;
            line-height: 90px;
            bottom: 70px;
            cursor: pointer;
            z-index: 2;
        }
        .goleft {
            position: absolute;
            right: 153px;
            ;
            width: 80px;
            height: 80px;
            line-height: 90px;
            cursor: pointer;
        }
        .goright {
            position: absolute;
            right: 60px;
            width: 80px;
            height: 80px;
            line-height: 90px;
            cursor: pointer;
        }
        .goback {
            position: absolute;
            right: 60px;
            width: 80px;
            height: 80px;
            line-height: 90px;
            cursor: pointer;
        }
        .box {
            height: 649px;
            width: 100000px;
            position: absolute;
            left: 0;
            z-index: 1;
            .slide {
                float: left;
            }
        }
    }
    .nav {
        position: absolute;
        height: 10px;
        text-align: center;
        width: 600px;
        bottom: 0;
        left: 50%;
        margin-left: -300px;
        user-select: none;
        span {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 100%;
            background: rgba(255, 255, 255, 0.5);
            cursor: pointer;
            margin-left: 10px;
            &.active {
                background: #fff;
            }
        }
    }
}

.func_apply {
    .content {
        .iconfont {
            color: #f05576;
            &:hover {
                color: #cb2e50;
            }
        }
    }
}

.yijianpuhuo {
    .content {
        .iconfont {
            color: #ffd40d;
            &:hover {
                color: #e1bb0d;
            }
        }
    }
}

.yijiandaifa {
    .content {
        .iconfont {
            color: #84a7ff;
            &:hover {
                color: #486dca;
            }
        }
    }
}