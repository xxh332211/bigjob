@import '../../common/reset';
@import '../../component/foot.scss';
@import '../../common/base';
@import '../../common/iconfont';
@import '../../iconcss/icon_1';
body {
    background: #fff;
}
.nav {
    margin-top: 20px;
    margin-bottom: 20px;
    span {
        font-size:12px;
        color:#999999;
        line-height:12px;
        text-align:left;
        a {
            font-size:12px;
            color:#999999;
        }
    }
}
.search {
    position: relative;
    input { 
        border:1px solid #bdbdbd;
        width:310px;
        height:36px;
        text-indent: 10px;
    }
    i {
        position: absolute;
        left: 280px;
        top: 0;
        color: #ccc;
        font-size: 26px;
        top: 6px;
        cursor: pointer;
    }
}

.main_panel {
    height: 25px;
    line-height: 25px;
    margin-top: 22px;
    margin-bottom: 10px;
    .selectall {
        cursor: pointer;                                                                                             
        i {
            width: 15px;
            height: 15px;
            border:1px solid #c5c5c5;
            text-align: center;
            line-height: 15px;
            color: #fff;
            background: #fff;
        }
        span {
            font-size:12px;
            color:#333333;
        }
        
        &.selected {
            i {
                background: #ff3c23;
            }
        }
    }
    .add_inpaper {  
        font-size:12px;
        color:#666666;
        span {
            color: #ff3c23;
        }
        button {
            background:#ff3c23;
            border-radius:2px;
            width:80px;
            height:24px;
            font-size:12px;
            color:#ffffff;
            line-height:24px;
            text-align:center;
            outline: none;
            border: none;
            cursor: pointer;
            margin-left: 10px;
            &.disable {
                background: #aaaaaa;
            }
        }
    }
}

.maintitle {
    height: 50px;
    line-height: 50px;
    border-top: 2px solid #e6e6e6;
    span {
        display: inline-block;
        font-size:12px;
        color:#333333;
        &:nth-child(1){
            margin-left: 140px;
            width: 167px;
        }
        &:nth-child(2){
            width: 73px;
        }
        &:nth-child(3){
            width: 121px;
        }
        &:nth-child(4){
            width: 160px;
        }
        &:nth-child(5){
            width: 142px;
        }
        &:nth-child(6){
            width: 110px;
        }
        &:nth-child(7){
            width: 162px;
        }
        &:nth-child(8){
            width: 80px;
        }
    }
}

.products {
    .product {
        padding : {
            left: 25px;
            top: 20px;
        }
        background:#fcfcfc;
        border:1px solid #eeeeee;
        width:1200px;
        height:120px;
        .iconfont {
            width: 15px;
            height: 15px;
            color: #fff;
            line-height: 15px;
            text-align: center;
            border: 1px solid #c5c5c5;
        }
        .pic {
            width: 80px;
            height: 80px;
            background: black;
        }
        .title {
            width: 145px;
            p {
                width: 145px;
                font-size:12px;
                color:#666666;
                margin-left:10px;
                &:nth-child(1){
                    overflow: hidden;
                    text-overflow:ellipsis;
                    white-space: nowrap;
                }
                &:nth-child(2){
                    margin-top: 16px;
                }
            }
        }
        &.selected {

        }
    }
}
