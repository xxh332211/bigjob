@import '../../common/reset';
@import '../../common/base';
@import '../../component/head.scss';
.taobao_logo {
    height: 88px;
    padding-top: 30px;
    .logo_main {
        .pic {
            vertical-align: middle;
        }
        .word {
            font-size: 18px;
            color: #888888;
            line-height: 18px;
            text-align: left;
            vertical-align: middle;
            height: 43px;
            line-height: 43px;
            margin-left: 20px;
        }
        .topen_step {
            position: relative;
            .steps {
                position: absolute;
                top: 0;
                left: 0;
                z-index: 99;
                overflow: hidden;
                &.step_1 {
                    width: 49px;
                }
                &.step_2 {
                    width: 189px;
                }
                &.step_3 {
                    width: 330px;
                }
            }
        }
    }
}

.open_form {
    width: 1200px;
    margin: 0 auto;
    padding-top: 40px;
    padding-bottom: 40px;
    padding-left: 60px;
    padding-right: 60px;
    border-top: 4px solid #ff0001;
    background: #fff;
    min-height: 300px;
    .open_form_page {
        margin: 0 auto;
        &.inputs {
            &>.title {
                width: 380px;
                margin: 0 auto;
                font-size: 16px;
                color: #ff5001;
                margin-bottom: 30px;
            }
            &>.row {
                margin-bottom: 20px;
                &>.input {
                    position: relative;
                    line-height: 40px;
                    width: 380px;
                    margin: 0 auto;
                    &>.inputname {
                        position: absolute;
                        font-size: 12px;
                        color: #333333;
                        padding-left: 20px;
                    }
                    &>input {
                        background: #ffffff;
                        border: 1px solid #bdbdbd;
                        border-radius: 2px;
                        width: 380px;
                        height: 40px;
                        padding-left: 100px;
                        &:focus {
                            border-color: #ff5001;
                        }
                    }
                }
                &>.protocol {
                    width: 380px;
                    margin: 0 auto;
                    cursor: pointer;
                    &.selected {
                        &>.iconfont {
                            color: #fd5214;
                            border-color: #fd5214;
                        }
                    }
                    &>.iconfont {
                        width: 16px;
                        height: 16px;
                        font-size: 16px;
                        overflow: hidden;
                        vertical-align: middle;
                        color: #fff;
                        border: 1px solid #e8e8e8;
                    }
                    &>span {
                        font-size: 12px;
                        color: #666666;
                        &:hover {
                            color: #ff5001;
                        }
                    }
                }
                &>.next {
                    width: 380px;
                    margin: 0 auto;
                    &.disable {
                        .next_btn {
                            background: #e5e5e5;
                            border-radius: 2px;
                            width: 380px;
                            height: 40px;
                        }
                    }
                    .next_btn {
                        background-image: linear-gradient(-90deg, #ff8f00 0%, #ff5101 100%);
                        border-radius: 2px;
                        width: 380px;
                        height: 40px;
                        font-size: 20px;
                        color: #ffffff;
                        border: none;
                        outline: none;
                        cursor: pointer;
                        &:hover {
                            background-image: linear-gradient(-90deg, #ec8400 0%, #e84900 100%);
                            border-radius: 2px;
                            width: 380px;
                            height: 40px;
                        }
                    }
                }
            }
        }
        &.protocol {
            .title {
                text-align: center;
                font-size: 20px;
                color: #333333;
            }
            .content {
                margin-top: 40px;
            }
        }
        &.bindshop {
            &>div {
                width: 380px;
                margin: 0 auto;
            }
            .title {
                font-size: 16px;
                color: #ff5001;
            }
            .tip {
                font-size: 14px;
                color: #666666;
                margin-top: 16px;
            }
            .pics {
                padding-left: 64px;
                padding-top: 70px;
                padding-bottom: 78px;
                line-height: 67px;
                .midpic {
                    margin-left: 50px;
                    margin-right: 50px;
                }
                &>img {
                    vertical-align: middle;
                }
            }
            .next {
                &.disable {
                    .next_btn {
                        background: #e5e5e5;
                        border-radius: 2px;
                        width: 380px;
                        height: 40px;
                        &:hover {
                            background: #e5e5e5;
                            border-radius: 2px;
                            width: 380px;
                            height: 40px;
                        }
                    }
                }
                .next_btn {
                    background-image: linear-gradient(-90deg, #ff8f00 0%, #ff5101 100%);
                    width: 380px;
                    height: 40px;
                    font-size: 20px;
                    color: #ffffff;
                    border: none;
                    outline: none;
                    cursor: pointer;
                    &:hover {
                        background-image: linear-gradient(-90deg, #ec8400 0%, #e84900 100%);
                        border-radius: 2px;
                        width: 380px;
                        height: 40px;
                    }
                }
            }
        }
        &.already_open {
            .congratulation {
                width: 380px;
                margin: 0 auto;
                .iconfont {
                    color: #83ca54;
                    width: 26px;
                    height: 26px;
                    font-size: 26px;
                }
                span {
                    font-size: 22px;
                    color: #333333;
                }
            }
            .back_index {
                width: 380px;
                margin: 0 auto;
                margin-top: 54px;
                padding-left: 35px;
                button {
                    background-image: linear-gradient(-90deg, #ff8f00 0%, #ff5101 100%);
                    border-radius: 2px;
                    width: 134px;
                    height: 36px;
                    font-size: 16px;
                    color: #ffffff;
                    border: none;
                    outline: none;
                    cursor: pointer;
                }
            }
        }
    }
}