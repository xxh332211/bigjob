
.place_holder {
	width: 35px;
	height: 100%;
	position:fixed;
	right: 0;
	top: 0;
	z-index: 998;
}

.sidebar_right {
	box-sizing: border-box;
	transition: all 0.5s ease;
	width: 35px;
	height: 100%;
	background: #333333;
	position:fixed;
	right: 0;
	top: 0;
	z-index: 999;
	opacity: 1;
}
.place_holder:hover .sidebar_right {
	box-sizing: border-box;
	display: block;
	width: 35px;
	opacity: 1;
}
.sidebar_right .sidebar_nav {
	box-sizing: border-box;
	position: absolute;
	top: 50%;
	width:35px;
	transform: translateY(-70%);
}
.sidebar_nav li {
	box-sizing: border-box;
	float: left;
	width: 35px;
	height: 30px;
	position: relative;
	&.inpaper {
		height: 132px;
		background: white;
		a {
			i {
				top: 0;
				bottom: auto;
			}
		}
	}
	a {
		i {
			position :absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom:0;
			margin:auto;
			&.click {
				display: none;
			}
			&.nor {
				display: block;
			}
		}
	}
}
.sidebar_nav li:hover {
	background: #ff7e18;
	a {
		i {
			&.click {
				display: block;
			}
			&.nor {
				display: none;
			}
		}
	}
}
.back_top {
	box-sizing: border-box;
	position: fixed;
	bottom: 10px;
	width: 35px;
}
.back_top li {
	box-sizing: border-box;
	float: left;
	height: 30px;
	width: 35px;
	position: relative;
	margin-top: 15px;
	a {
		i {
			position :absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom:0;
			margin:auto;
			&.click {
				display: none;
			}
			&.nor {
				display: block;
			}
		}
	}	
}
.back_top li:hover {
	background: #ff7e18;
	a {
		i {
			&.click {
				display: block;
			}
			&.nor {
				display: none;
			}
		}
	}
}
.sidebar_nav .sidebar_r_underline,
.back_top .sidebar_r_underline {
	height: 1px;
	width: 30px;
	margin-left: 3px;
	border-bottom: 0.5px solid #cccccc;
	padding:0;
	
}
.sidebar_nav .info_box,
.back_top .info_box {
	box-sizing: border-box;
	overflow: hidden;
	transition: all 0.5s ease;
	float: left;
	position: absolute;
	opacity: 0;
	width: 100px;
	height: 30px;
	text-align: center;
	padding: 7px 0;
	top: 0px;
	left: -200px;
	font-size: 14px;
	font-family: '微软雅黑';
	z-index: 999;
	cursor: pointer;
	color:white;
	width: 0;
}
.sidebar_nav li:hover .info_box,
.back_top li:hover .info_box {
	background: #ff7e18;
	transition: all 0.5s ease;
	opacity: 1;
	left: -100px;
	width:100px;
}