//activity_product -s
.activity_product {
	margin-bottom: 60px;
	.product {
		float: left;
		background:#ffffff;
		border:1px solid #ebebeb;
		width:282px;
		height:430px;
		margin-right: 24px;
		margin-top: 20px;
		&:nth-child(4n) {
			margin-right: 0;
		}
		.product_top {
			width: 280px;
			height: 280px;
			position: relative;
			.product_pic {
				width: 100%;	
				height: 100px;
				img {
					width: 280px;	
					height: 280px;
				}
			}
			.product_notice {
				position: absolute;
				bottom: 0;
				left: 0;
				background:rgba(51,51,51,.6);
				width:280px;
				height:28px;
				p {
					height:28px;
					line-height: 28px;
					color: #fff3f7;
					span {
						margin-left: 12px;
						margin-right: 10px;
					}
				}
			}
		}
		.product_bottom {
			padding-left: 10px;
			padding-top: 10px;
			.product_title {
				height: 40px;
				width: 258px;
				a {
					font-size: 14px;
					color:#333;
				}
			}
			.product_price {
				margin-top: 6px;
				position: relative;
				.price_now {
					b {
						font-family:'NotoSansHans-Regular';
						font-size:18px;
						color:#ff4e00;
					}
					span {
						font-family:'NotoSansHans-Medium';
						font-size:36px;
						color:#ff4e00;
						line-height: 1em;
					}
				}
				.price_origin {
					position: absolute;
					bottom: 0;
					left: 100px;
					b {
						font-family:'NotoSansHans-Regular';
						font-size:18px;
						color:#8a8986;
					}
					span {
						font-family:'NotoSansHans-Medium';
						font-size:24px;
						color:#8a8986;
					}
					.del_line {;
						border-bottom: 1px solid #8e8986;
						position: absolute;
						width: 100%;
						top:50%;
						transform:translateY(-50%);
					}
				}
				.price_supplier {
						font-family:'MicrosoftYaHei';
						font-size:14px;
						color:#999999;
						position: absolute;
						top:50%;
						transform:translateY(-50%);
						right: 10px;
				}
			}
			.product_btn {
				margin-top:5px;
				overflow: hidden;
				.buynow {
					background:#ff9c00;
					width:260px;
					height:40px;
					color:#fff;
					font-size: 14px;
					cursor: pointer;
				}
			}
		}
	}
}
//product_adv_middle -s
.product_adv_middle {
	position: relative;
	height: 56px;
	border:1px solid black;
	img {
		position: absolute;
		left: 50%;
		transform:translateX(-50%);
		height:100%;
	}
}
//product_adv_middle -e

//product_more -s
.product_more {
	margin-top: 20px;
	margin-bottom: 60px;
	ul {
		li {
			width:190px;
			height:236px;
			float: left;
			margin-right:12px;
			&:last-child {
				margin-right:0;
			}
			img {
				width: 100%;
				height: 100%;
			}
		}
	}
}
//product_more -e