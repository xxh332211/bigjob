@import '../../common/reset';
@import '../../common/base';
@import '../../component/foot';
@import '../../component/head.scss';
@import '../../common/iconfont';

body {
	background: #fff;
}
.banner {
	height: 440px;
	min-width: 1200px;
	.banner_center {
		height: 440px;
		.contact_us {
			background:#ffffff;
			border-radius:2px;
			width:258px;
			height:302px;
			margin-top: 70px;
			margin-right: 15px;
			padding-left: 25px;
			padding-right: 25px;
			user-select: none;
			.title {
				font-size:20px;
				color:#333333;
				text-align: center;
				margin-top: 30px;
				font-weight: bold;
			}
			.text {
				width: 205px;
				height: 110px;
				margin-top: 30px;
				border:{
					top: 1px dashed #ccc;
					bottom: 1px dashed #ccc;
				}
				p {
					text-align: center;
					margin-top: 20px;
					font-size:16px;
					color:#333333;
				}
			}
			a {
				.btn {
					background:#ff7e18;
					border-radius:2px;
					width:204px;
					height:40px;
					text-align: center;
					line-height: 40px;
					font-size:16px;
					color:#ffffff;
					cursor: pointer;
					margin-top: 30px;
					.iconfont {
						font-size: 25px;
						vertical-align: middle;
					}
				}
			}
		}
	}
}

.brand_title {
	margin-top: 50px;
	font-size:26px;
	color:#333333;
	text-align: center;
}

.brand_text {
	font-size:20px;
	color:#666666;
	margin-top: 20px;
}

.product_brand {
	height:420px;
	margin-top: 40px;
	.single {
		background: #fff;
		width:320px;
		height:420px;
		&:first-child {
			margin-right: 120px;
		}
		.top {
			height:220px;
			width: 320px;
			position: relative;
		}
		.bottom {
			padding-left: 30px;
			padding-right: 30px;
			border:1px solid #eee;
			height: 200px;
			.bottom_title {
				font-size:26px;
				color:#333333;
				text-align: center;
				margin-top: 30px;
			}
			.word {
				font-size:20px;
				color:#888888;
				margin-top: 16px;
			}
		}
	}
}

.brand_empower {
	height: 600px;
	margin-top: 50px;
	min-width: 1200px;
	overflow: hidden;
	.brand_title {
		margin-top: 50px;
		color: #fff;
	}
	.brand_text {
		color: #fff;

	}
	.step {
		margin-top: 40px;
		.single {
			background:#ffffff;
			width:234px;
			height:370px;
			overflow: hidden;
			margin-right: 7px;
			padding:{
				left:30px;
				right:30px;
			}
			&:last-child {
				margin-right: 0;
			}
			.pic {
				width: 98px;
				height: 98px;
				border-radius: 100%;
				overflow: hidden;
				margin :0 auto;
				margin-top: 40px;
			}
			.title {
				font-size:26px;
				color:#333333;
				text-align:center;
				margin-top: 30px;
			}
			.word {
				font-size:20px;
				color:#888888;
				text-align:left;
				margin-top: 30px;
			}
			.iconfont {
				border:2px solid #666666;
				color: #666;
				width:22px;
				height:22px;
				border-radius: 100%;
				text-align: center;
				line-height: 19px;
				display: block;
				margin:0 auto;
				margin-top: 30px;
			}
		}
	}
}

.brand_order {
	background: #fff;
	overflow: hidden;
	.order_step {
		height: 285px;
		margin:0 auto;
		margin-top: 50px;
		.steps {
			margin: 0 auto;
			width: 1020px;
			.step {
					width: 240px;
				.pic {
					width: 64px;
					height: 77px;
					margin:0 auto;
				}
				.title {
					font-size:26px;
					color:#333333;
					text-align: center;
					margin-top:30px;
				}
				.word {
					font-size:20px;
					color:#888888;
					width:180px;
					margin:0 auto;
					margin-top: 20px;
				}
			}
			.sub_line {
				margin-top: 40px;
			}
		}
	}
}

.resource_docking {
	height: 600px;
	background: #f8f8f9;
	.resource {
		margin-top: 50px;
		.single {
			width: 260px;
			height: 350px;
			background: #fff;
			padding-left: 40px;
			padding-right: 40px;
			overflow: hidden;
			margin-right: 50px;
			&:last-child {
				margin-right: 0;
			}
			.pic {
				width: 100px;
				height: 100px;
				margin:0 auto;
				margin-top: 40px;
			}
			.title {
				font-size:26px;
				color:#333333;
				text-align: center;
				margin-top: 30px;
			}
			.word {
				font-size:18px;
				color:#888888;
				margin-top: 20px;
			}
		}
	}
}