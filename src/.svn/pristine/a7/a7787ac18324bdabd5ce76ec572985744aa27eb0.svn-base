body {
	width: 100%;
	height: 100%;
}

html {
	width: 100%;
	height: 100%;
}

.redpack {
	width: 100%;
	height: 100%;
	display: none;
	position: fixed;
	top: 0;
	left: 0;
}

.redpack .cover {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: #333;
	filter: Alpha(opacity=5);
	-moz-opacity: 0.5;
	opacity: 0.5;
}

.redpack .center {
	width: 374px;
	height: 481px;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -240px;
	margin-left: 0;
}

.redpack .center .red_price {
	position: absolute;
	top: 290px;
	left: 135px;
	font-size: 50px;
	font-weight: bold;
	line-height: 1em;
	letter-spacing: 0px;
	color: #ffee51;
}

.redpack .center .getnow {
	position: absolute;
	display: block;
	top: 386px;
	left: 107px;
	width: 158px;
	height: 40px;
}

.redpack .center .close {
	position: absolute;
	top: 41px;
	right: 38px;
	cursor: pointer;
}

.getpack {
	width: 100%;
	height: 100%;
}

.getpack .cover {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: #333;
	filter: Alpha(opacity=5);
	-moz-opacity: 0.5;
	opacity: 0.5;
}

.getpack .content {
	width: 587px;
	height: 523px;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -447px;
	margin-left: -293px;
}

.getpack .content .close {
	position: absolute;
	top: 190px;
	right: 105px;
	cursor: pointer;
}

.getpack .content .discounts {
	position: absolute;
	top: 387px;
	left: 130px;
}

.getpack .content .discounts .single {
	width: 321px;
	height: 92px;
	background: url("../../../frontV1/img/pic/component/priceback.png") top center;
}

.getpack .content .btns {
	margin-top: 150px;
	padding-left: 130px;
	padding-right: 145px;
}

.getpack .content .btns a {
	width: 145px;
	height: 46px;
	background-color: #ffd800;
	border-radius: 5px;
	line-height: 46px;
	text-align: center;
	font-size: 17px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #e60012;
}

.getpack .content .btns .buynow {
	float: left;
}

.getpack .content .btns .check {
	float: right;
}