.fl {
    float: left;
}
.fr {
    float: right;
}
.clearfix:after,
.clearfix:before {
    content: "";
    line-height: 0;
    height: 0;
    display: block;
    visibility: hidden;
    clear: both;
}
.clearfix {
    *zoom:1;
}
.banxin {
    width: 1200px;
    margin: 0 auto;
    border:none;
}
.middle {
    position: absolute;
    top: 50%;
    transform:translateY(-50%);
    z-index: 99;
}
.center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 99;
}
.hide {
    display: none;
}
.show {
    display: block;
}
//css简单交互动画
.scal {
    overflow: hidden;
    position: relative;
    img {
        width: 100%;
        height: 100%;
        transition : width .3s ease-out;
        position: absolute;
        top: 50%;
        left:50%;
        transform:translate(-50%,-50%);
    }
    &:hover {
        img {
            width: 110%;
            transition: width .3s ease-out;
        }
    }
}

.jump {
    position: relative;
    top:0;
    transition: all .1s;
    &:hover {
        top: -10px;
        transition: all .1s ease-out;
    }
}

.shake {
    overflow: hidden;
    position: relative;
    img {
        width: 100%;
        height: 100%;
        transition : all .3s ease-out;
        position: absolute;
        top: 50%;
        left:50%;
        transform:translate(-50%,-50%);
    }
    &:hover {
        img {
            transform:translate(-52%,-50%);
            transition : all .3s ease-out;
        }
    }    
}

.cover_show {
    .pic_cover_all {
        transition:all .4s ease-in;
        width: 100%;
        height: 100%;
    }
    &:hover {
        .pic_cover_all {
            opacity: 1;
            transition:all .4s ease-in;
        }
    }
    .pic_cover_all {
        opacity: 0;
        .pic_cover {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,.5);
            text-align: center;
            p {
                margin-top:30px;
                font-size:12px;
                color:#ffffff;
                line-height:12px;
            }
            a {
                display: inline-block;
                margin-top: 12px;
                background:#ff3c23;
                border-radius:51px;
                width:64px;
                height:20px;
                color: #fff;
                cursor: pointer;
                font-size: 10px;
            }
        }
    }
}