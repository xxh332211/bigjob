<div class="modal_cover hide">
	<div class="modal_cotainer">
	{{each array as value i}}
		{{if i == 0}}
		<div class="close">
			<i class="iconfont">&#xe619;</i>
		</div>
		{{/if}}

		{{if value.type == "title"}}
		<div class="title">{{value.content}}</div>
		{{/if}}

		{{if value.type == "alert"}}
		<div class="alert">
			{{value.content}}
		</div>
		{{/if}}

		{{if value.type == "note"}}
		<div class="paragraph">
			{{value.content}}
		</div>
		{{/if}}

		{{if value.type =="input"}}
		<div class="input" data-name={{value.name}}>
			<label>
				<span>{{value.text}}</span>:
				<input type="text" placeholder={{value.holder}} data-child="{{value.type}}">
			</label>
		</div>
		{{/if}}

		{{if value.type == "identify"}}
		<div class="input identify" data-name={{value.name}}>
			<label>
				<span>{{value.text}}</span>:
				<input type="text" placeholder={{value.holder}} data-child="{{value.type}}">
				<img src="..." alt="">
			</label>
		</div>
		{{/if}}

		{{if value.type =="date"}}
		<div class="input" data-name={{value.name}}>
			<label>
				<span>{{value.text}}</span>:
				<input type="text" placeholder={{value.holder}} data-child="{{value.type}}" onClick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" class="laydate-icon">
			</label>
		</div>
		{{/if}}

		{{if value.type == "fullinput"}}
		<div class="fullinput">
			<div data-name={{value.name}}>
				<input type="text" placeholder={{value.holder}} data-child={{value.type}}>
				<i class="iconfont">{{value.icon}}</i>
				{{if value.sub == "identify"}}
				<span>
					<img src="..." alt="">
				</span>
				{{/if}}
			</div>
		</div>
		{{/if}}
		
		{{if value.type == "option"}}
		<div class="option">
			<div class="btn clearfix">
				{{if value.sub.indexOf('cancel')>-1}}
				<div class="cancel">取消</div>
				{{/if}}

				{{if value.sub.indexOf('sure')>-1}}
				<div class="sure">{{value.text}}</div>
				{{/if}}

				{{if value.sub.indexOf('big')>-1}}
				<div class="big">{{value.text}}</div>
				{{/if}}

				{{if value.sub.indexOf('login')>-1}}
				<div class="login_tag clearfix">
					<a href={{value.link1}}>
						<span>忘记登录密码?</span>
					</a>
					<a href={{value.link2}}>
						<span>免费注册</span>
					</a>
				</div>
				{{/if}}
			</div>
		</div>
		{{/if}}
	{{/each}}
	</div>
</div>