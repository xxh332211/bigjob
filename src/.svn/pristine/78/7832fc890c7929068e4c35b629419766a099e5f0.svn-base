//filter -s
.filter {
	.filter_top {
		background: #fff;
		width:100%;
		height:50px;
		line-height: 50px;
		.filter_top_content {
			padding-left: 78px;
			dl {
				dt,dd {
					height: 50px;
					float: left;
					margin-right: 50px;
					a {
						font-family:'NotoSansHans-Regular';
						font-size:16px;
						color:#333333;
						&:hover {
							color: #ff3c23;
						}
					}
				}
			}
		}
	}
	.filter_bottom {
		background: #fff;
		height:50px;
		text-align: left;
		line-height: 50px;
		padding-left: 78px;
		ul {
			float: left;
			li {
				float: left;
				height: 50px;
				margin-right: 50px;
				a {
					font-family:'NotoSansHans-Regular';
					font-size:14px;
					color:#333;
					&:hover {
						color: #ff3c23;
					}
				}
			}
		}
		input {
			display: inline-block;
			border:none;
			&.price {
				background:#ffffff;
				border:1px solid #ededed;
				width:58px;
				height:22px;
				font-size:12px;
				text-indent: .5em;
				&:-webkit-input-placeholder {
					color:#bdbdbd;
				}
			}
			&.price_sure_nor {
				background:#ffffff;
				border:1px solid #ff3c23;
				width:48px;
				height:22px;
				color:#ff3c23;
				cursor: pointer;
			}
			&.price_sure_click {
				background:#ff3c23;
				border:1px solid #ff3c23;
				width:48px;
				height:22px;
				color:#fff;
				cursor: pointer;
			}
			&.search_input {
				float: left;
				height: 24px;
				width: 282px;
			}
			&.btn {
				float: left;
				background:#e5e5e5;
				width:70px;
				height:30px;
				cursor: pointer;
			}
		}
		.search {
			margin-top: 10px;
			background:#ffffff;
			border:2px solid #e5e5e5;
			width:356px;
			height:32px;
			line-height: 28px;
			margin-right: 22px;
			position: relative; 
			text-align: center;
			i {
				position: absolute;
				top: 6px;
				right: 25px;
				cursor:pointer;
			}
		}
	}
}
//filter -e

//activity_adv_little -s
