@import "../../common/reset.scss";
@import "../../common/base.scss";
@import "../../common/iconfont.scss";
@import "../../common/nanoscroller.scss";
.updata {
    margin: 0 auto;
    margin-top: 500px;
    width: 136px;
    position: fixed;
    right: 30px;
    bottom: 100px;
    .updata_pic {
        width: 136px;
        height: 122px;
        cursor: pointer;
    }
    .updata_window {
        width: 365px;
        height: 267px;
        background: url('../../img/pic/system/updata_bac.png') top center;
        position: absolute;
        left: -380px;
        top: -280px;
        padding:7px;
        padding-top: 61px;
        padding-left: 15px;
        display: none;
        .close {
            position: absolute;
            top:20px;
            right:16px;
            cursor: pointer;
            user-select: none;
            i {
                color: #fff;
            }
        }
        .title {
            width: 318px;
            height: 26px;
            background-color: #eeeeee;
            line-height: 26px;
            text-align: left;
            color: #333333;
            span {
                display: inline-block;
                font-size: 14px;
                font-weight: 500;
                &:nth-child(1){
                    margin-left: 30px;
                    width: 75px;
                }
                &:nth-child(2) {
                    width: 100px;
                }
                &:nth-child(3) {
                    width: 100px;
                }
            }
        }
        .nano {
            width: 343px;
            height: 166px;
            position: relative;
            .nano-content {
                padding-top: 0;
                ul {
                    li {
                        height: 40px;
                        width: 318px;
                        border-bottom: 1px solid #eee;
                        line-height: 40px;
                        background: #fff;
                        padding-left:12px;
                        span {
                            font-size: 13px;
                            font-weight: 500;
                            text-align: left;
                            color: #666666;
                            display: inline-block;
                            &:nth-child(1){
                                overflow: hidden;
                                text-overflow:ellipsis;
                                white-space: nowrap;
                                width :96px;
                                vertical-align: middle;
                            }
                            &:nth-child(2){
                                 width:96px;
                            }
                        }
                    }
                }
            }
            .nano-pane {
                position: absolute;
                right: 7px;
                background: #eee;
                .nano-slider {
                    background: #f8f8f8;
                }
            }
        }
    }
}