@import '../../common/reset';
@import '../../common/base';
@import '../../common/iconfont';
@import '../../iconcss/icon_1';
@import '../../common/user_center_common';
// @import '../../component/theme/default/laydate';
.layui-laydate .layui-this {
	background-color: #ff7e18 !important;
}
.user_content {
	.user_content_r {
		width: 980px;
		padding-top: 10px;
		//这里是个人中心首页的内容
		// user_main_header -s
		.user_main_header {
			height: 150px;
			width: 100%;
			background: #fff;
			.main_header_l {
				width: 295px;
				height:100%;
				border-right: 1px dotted #e8e8e8;
				padding-left: 28px;
				padding-top:28px;
				.logo_pic {
					height: 88px;
					width: 88px;
					border-radius: 100%;
					background: #ccc;
				}
				.user_info {
					margin-left: 19px;
					p {
						margin-top: 20px;
						font-size:16px;
						color:#656565;
						&:first-child {
							margin-top: 10px;
						}
					}
				}
			}
			.main_header_center {
				width: 380px;
				height: 100%;
				border-right: 1px dotted #e8e8e8;
				padding-top: 40px;
			}
			.main_header_center>div {
				float: left;
				margin-left: 35px;
				.pic {
					width: 40px;
					height: 40px;
					border-radius: 100%;
					background: black;
					margin: 0 auto;
					img {
						width: 100%;
					}
				}
				.words {
					margin-top: 5px;
					span {
						font-size:12px;
						color:#656565;
						a {
							font-size:12px;
							color:#656565;
						}
					}
					b {
						margin-left: 4px;
						font-size:12px;
						color:#ff3c23;
					}
				}
			}
			.main_header_r {
				width: 305px;
				height: 100%;
				padding-top: 40px;
				padding-left: 40px;
				p {
					font-size:16px;
					color:#333333;
					font-weight: bold;
				}
				.money {
					margin-top: 10px;
					span {
						font-size:24px;
						color:#ff3c23;
						font-weight: bold;
					}
					b {
						font-size:12px;
						color:#333333;
					}
				}
			}
		}
		// user_main_header -e
		//mystuff -s
		.mystuff {
			width: 100%;
			margin-top: 20px;
			background: #fff;
			.stuff_title {
				height: 40px;
				border-bottom: 1px solid #e5e5e5;
				padding: {
					top: 10px;
					left: 20px;
				}
				span {
					font-size:16px;
					color:#666666;
					font-weight: bold;
				}
			}
			.stuff_content {
				.order_floor {
					display: table;
					padding: {
						top : 12px;
						left: 12px;
						right: 10px;
					}
					width: 980px;
					position: relative;
					border-bottom: 1px solid #e5e5e5;
					.pics {
						float: left;
						width: 600px;
						.pic {
							width: 80px;
							height: 80px;
							float: left;
							background: black;
							margin-right: 20px;
							margin-bottom: 12px
						}
					}
					.order_info {
						position: absolute;
						right: 10px;
						top: 50%;
						margin-top: -14px;
						display: table-cell;
						float:right;
						width: 300px;
						height: 28px;
						line-height: 28px;
						.order_no {
							float: left;
							font-size:12px;
							color:#333333;
							font-weight: bold;
						}
						.get_btn {
							float: right;
							input {
								cursor: pointer;
								background:#ffffff;
								border:1px solid #e5e5e5;
								border-radius:2px;
								width:60px;
								height:28px;
								font-size:12px;
								color:#666666;
							}
						}
					}
				}
			}
		}
		//mystuff -e

		// guss_u_like -s
		.guss_u_like {
			width: 100%;
			margin-top: 20px;
			background: #fff;
			.guss_title {
				height: 40px;
				border-bottom: 1px solid #e5e5e5;
				padding: {
					top: 10px;
					left: 20px;
				}
				span {
					font-size:16px;
					color:#666666;
					font-weight: bold;
				}
			}
			.guss_content {
				padding: 10px;
				background: #fff;
				.guss_single {
					background:#ffffff;
					border:1px solid #eeeeee;
					width:220px;
					height:300px;
					float: left;
					margin-right: 25px;
					margin-bottom: 25px;
					&:nth-child(4n) {
						margin-right: 0;
					}
					.pic {
						width: 217px;
						height: 217px;
						overflow: hidden;
						background: black;
						img {
							width: 100%;
						}
					}
					.guss_info {
						padding: 10px;
						.price {
							color: #ff3c23 ;
							span {
								font-size:18px;
								color:#ff3c23;
							}
							b {
								font-size:20px;
								color:#ff3c23;
							}
						}
						.guss_single_title {
							font-size:12px;
							color:#666666;
							margin-top: 10px;
							overflow: hidden;
							text-overflow:ellipsis;
							white-space: nowrap;
						}
					}
				}
			}
		}
		// guss_u_like -e
		//这里开始是个人中心全部订单的内容
		.search_cheack {
			background: #fff;
			height: 250px;
			border: 1px solid transparent;
			&>div {
				margin-top: 20px;
				padding-left: 20px;
				input {
					width: 200px;
					height: 35px;
					outline: none;
					border:1px solid #e5e5e5;
					outline:none;
					text-indent: 25px;
					&:focus {
						border-color: #27cdf2;
					}
				}
				&>span {
					display: inline-block;
					position: relative;
				}
				.select {
					width: 200px;
					height: 35px;
					outline: none;
					border: 1px solid #e5e5e5;
					float: left;
					position: relative;
					margin-left: 10px;
					&:first-child {
						margin-left: 0;
					}
					&>.iconfont {
						width: 14px;
						height: 14px;
						position: absolute;
						top: 50%;
						right: 10px;
						font-size: 14px;
						margin-top: -7px;
						color: #7c7c7c;
					}
					.select_head {
						width: 198px;
						height: 33px;
						padding-left: 25px;
						line-height: 33px;
						font-size:12px;
						color:#333333;
						cursor: pointer;
						background: #f6f6f6;
					}
					.select_dropdown {
						background: #fff;
						position: absolute;
						width: 200px;
						display: none;
						z-index: 999;
						border: {
							left: 1px solid #e5e5e5;
							bottom: 1px solid #e5e5e5;
							right: 1px solid #e5e5e5;
						}
						ul {
							li {
								padding-left: 25px;
								height: 35px;
								color:#333333;
								font-size: 12px;
								position: relative;
								line-height: 35px;
								cursor: pointer;
								&:hover {
									background: #f6f6f6;
									.iconfont {
										color: #f6f6f6;
									}
								}
								.iconfont {
									width: 12px;
									height: 12px;
									font-size: 15px;
									background: #ff3c23;
									color: #fff;
									position: absolute;
									left: 7px;
									top: 50%;
									margin-top: -6px;
									display: none;
								}
								&.selected {
									color: #ff3c23;
									.iconfont {
										display: block;
									}
								}
							}
						}
					}
				}
				button {
					background: #ff7e18;
					background:linear-gradient(-180deg, #fe9a02 0%, #f78400 100%);
					border-radius:2px;
					width:120px;
					height:38px;
					outline: none;
					border:none;
					cursor: pointer;
					font-size:16px;
					color:#ffffff;
				}
			}
		}
	}
}