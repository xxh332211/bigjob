@import '../../common/reset';
@import '../../common/base';
@import '../../common/iconfont';
@import '../../iconcss/icon_1';
@import '../../common/user_center_common';

.user_content {
	.user_content_r {
		width: 980px;
		padding-top: 10px;
		//这里是个人中心首页的内容
		// user_main_header -s
		.user_main_header {
			height: 150px;
			width: 100%;
			background: #fff;
			.main_header_l {
				width: 295px;
				height:100%;
				border-right: 1px dotted #e8e8e8;
				padding-left: 28px;
				padding-top:28px;
				.logo_pic {
					height: 88px;
					width: 88px;
					border-radius: 100%;
					background: #ccc;
				}
				.user_info {
					margin-left: 19px;
					p {
						margin-top: 20px;
						font-size:16px;
						color:#656565;
						&:first-child {
							margin-top: 10px;
						}
					}
				}
			}
			.main_header_center {
				width: 380px;
				height: 100%;
				border-right: 1px dotted #e8e8e8;
				padding-top: 40px;
			}
			.main_header_center>div {
				float: left;
				margin-left: 35px;
				.pic {
					width: 40px;
					height: 40px;
					border-radius: 100%;
					background: black;
					margin: 0 auto;
					img {
						width: 100%;
					}
				}
				.words {
					margin-top: 5px;
					span {
						font-size:12px;
						color:#656565;
						a {
							font-size:12px;
							color:#656565;
						}
					}
					b {
						margin-left: 4px;
						font-size:12px;
						color:#ff3c23;
					}
				}
			}
			.main_header_r {
				width: 305px;
				height: 100%;
				padding-top: 40px;
				padding-left: 40px;
				p {
					font-size:16px;
					color:#333333;
					font-weight: bold;
				}
				.money {
					margin-top: 10px;
					span {
						font-size:24px;
						color:#ff3c23;
						font-weight: bold;
					}
					b {
						font-size:12px;
						color:#333333;
					}
				}
			}
		}
		// user_main_header -e
		//mystuff -s
		.mystuff {
			width: 100%;
			margin-top: 20px;
			background: #fff;
			.stuff_title {
				height: 40px;
				border-bottom: 1px solid #e5e5e5;
				padding: {
					top: 10px;
					left: 20px;
				}
				span {
					font-size:16px;
					color:#666666;
					font-weight: bold;
				}
			}
			.stuff_content {
				.order_floor {
					display: table;
					padding: {
						top : 12px;
						left: 12px;
						right: 10px;
					}
					width: 980px;
					position: relative;
					border-bottom: 1px solid #e5e5e5;
					.pics {
						float: left;
						width: 600px;
						.pic {
							width: 80px;
							height: 80px;
							float: left;
							background: black;
							margin-right: 20px;
							margin-bottom: 12px
						}
					}
					.order_info {
						position: absolute;
						right: 10px;
						top: 50%;
						margin-top: -14px;
						display: table-cell;
						float:right;
						width: 300px;
						height: 28px;
						line-height: 28px;
						.order_no {
							float: left;
							font-size:12px;
							color:#333333;
							font-weight: bold;
						}
						.get_btn {
							float: right;
							input {
								cursor: pointer;
								background:#ffffff;
								border:1px solid #e5e5e5;
								border-radius:2px;
								width:60px;
								height:28px;
								font-size:12px;
								color:#666666;
							}
						}
					}
				}
			}
		}
		//mystuff -e

		// guss_u_like -s
		.guss_u_like {
			width: 100%;
			margin-top: 20px;
			background: #fff;
			.guss_title {
				height: 40px;
				border-bottom: 1px solid #e5e5e5;
				padding: {
					top: 10px;
					left: 20px;
				}
				span {
					font-size:16px;
					color:#666666;
					font-weight: bold;
				}
			}
			.guss_content {
				padding: 10px;
				background: #fff;
				.guss_single {
					background:#ffffff;
					border:1px solid #eeeeee;
					width:220px;
					height:300px;
					float: left;
					margin-right: 25px;
					margin-bottom: 25px;
					&:nth-child(4n) {
						margin-right: 0;
					}
					.pic {
						width: 217px;
						height: 217px;
						overflow: hidden;
						background: black;
						img {
							width: 100%;
						}
					}
					.guss_info {
						padding: 10px;
						.price {
							color: #ff3c23 ;
							span {
								font-size:18px;
								color:#ff3c23;
							}
							b {
								font-size:20px;
								color:#ff3c23;
							}
						}
						.guss_single_title {
							font-size:12px;
							color:#666666;
							margin-top: 10px;
							overflow: hidden;
							text-overflow:ellipsis;
							white-space: nowrap;
						}
					}
				}
			}
		}
		// guss_u_like -e
		//这里开始是个人中心全部订单的内容
		.search_cheack {
			div {
				input {
					width: 200px;
					height: 35px;
					outline: none;
					border:1px solid #e5e5e5;
				}
				select {
					width: 200px;
					height: 35px;
					outline: none;
					border:1px solid #e5e5e5;
					option{
						width: 200px;
						height: 35px;
						outline: none;
						background: gray;
					} 
				}
			}
		}
	}
}