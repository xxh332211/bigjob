@import '../../common/base';
@import '../../common/reset';
@import '../../component/head';
@import '../../component/foot';
@import '../../common/iconfont';
body {
	background:#f2f2f2;
}
//banner
.banner {
	min-width: 1200px;
	height: 440px;
	background: black;
}

//侧边广告
.side_adv {
	width: 134px;
	height: 201px;
	background:url("../../img/pic/alitong/window_img.png") top center;
	position: fixed;
	z-index: 999;
	right: 80px;
	top: 0;
	bottom:0;
	margin: auto 0;
	.close {
		border:1px solid #666666;
		width:25px;
		height:25px;
		border-radius:100%;
		text-align: center;
		line-height: 25px;
		position: absolute;
		right: -25px;
		top: 0;
		cursor: pointer;
	}
	a {
		position: absolute;
		display: block;
		width: 124px;
		height: 29px;
		text-align: center;
		line-height: 29px;
		bottom: 7px;
		left: 0;
		right: 0;
		margin:0 auto;
		font-size:16px;
		color:#ffffff;
	}
}


//阿里通专题页标题

.alitong_title {
	position: relative;
	text-align: center;
	margin-top: 20px;
	.title {
		span {
			font-size:24px;
			color:#333333;
		}
		.iconfont {
			font-size: 19px;
			color: #ccc;
			font-weight: 100px;
		}
	}
	.sub_title {
		margin-top: 5px;
		font-size:12px;
		color:#888888;
		span {
			margin-left: 8px;
			margin-right: 8px;
		}
		b {
			border-top:1px solid #979797;
			width:48px;
			height:1px;
			vertical-align: middle;
		}
	}
	.alitong_title_more {
		background:#f2f2f2;
		border:1px solid #999999;
		width:118px;
		height:32px;
		text-align: center;
		line-height: 32px;
		position: absolute;
		right: 0;
		top: 0;
		bottom: 0;
		margin:auto 0;
		span {
			font-size:14px;
			color:#666666;
		}
		i {
			font-size: 10px;
			vertical-align: middle;

		}

	}
}


//今日推荐
.platform {
	margin-bottom: 20px;
	.platform_content {
		ul {
			li {
				width: 390px;
				height: 200px;
				margin-right: 15px;
				float: left;
				margin-top: 20px;
				border: 1px solid black;
				&:nth-of-type(3n) {
					margin-right: 0;
				}
				.single_l {
					width: 198px;
					height: 198px;
					float: left;
				}
				.single_r {
					width: 190px;
					height: 198px;
					float: left;
					font-size:12px;
					color:#666666;
					padding-left: 16px;
					padding-top: 16px;
					.single_title {
						height: 34px;
						display: -webkit-box;
						-webkit-box-orient: vertical;
						-webkit-line-clamp: 2;
						overflow: hidden;
						.tag {
							display: inline-block;
							background:#ffffff;
							border:1px solid #ff7e18;
							width:38px;
							height:18px;
							font-size:12px;
							color:#ff7e18;
							text-align: center;
						}
					}
					.single_price {
						margin-top: 12px;
						.price_now {
							font-size:20px;
							color:#ff3c23;
						}
						.price_old {
							font-size:12px;
							color:#999999;
						}
					}

					.single_stock {
						font-size:12px;
						color:#999999;
						margin-top: 11px;
						a {
							font-size:12px;
							color:#999999;
						}
					}
					.single_sup {
						font-size:12px;
						color:#999999;
						margin-top: 1px;
						a {
							font-size:12px;
							color:#999999;
						}
					}
					.updata_btn {
						margin-top: 18px;
						position: relative;
						.btn {
							background:#ff7e18;
							border-radius:2px;
							width:100px;
							height:38px;
							font-size:14px;
							color:#ffffff;
							text-align: center;
							line-height: 38px;
							cursor: pointer;
						}
						.download {
							position: absolute;
							background: #ffc055;
							width: 20px;
							height: 20px;
							text-align: center;
							line-height: 20px;
							border-radius: 10px;
							right: 40px;
							bottom:0;
							cursor: pointer;
							z-index: 999;
							&:hover {
								.notice {
									display: block;
								}
							}
							.iconfont {
								color: #fff;
								width: 20px;
								height: 20px;
								line-height: 20px;
							}
							.notice {
								background:#e5e5e5;
								width:72px;
								height:20px;
								font-size:10px;
								color:#666666;
								position: absolute;
								left: 30px;
								top:0;
								display: none;
								z-index: 999;
							}
						}
					}
				}
			}
		}
	}
}

//楼层
.floor {
	margin-bottom: 20px;
	margin-top: 20px;
	.floor_main {
		.floor_title {
			position: relative;
			padding-bottom: 12px;
			margin-bottom: 8px;
			i{
				background:#ff6600;
				width:6px;
				height:20px;
				display: inline-block;
				float: left;
			}
			span {
				font-size:20px;
				color:#ff6600;
				letter-spacing:0;
				line-height: 1em;
				float: left;
				font-weight: bold;
				margin-left: 10px;
			}
			b {
				position: absolute;
				background:#fff;
				border:1px solid #f9f9f9;
				border-radius:10px;
				width:58px;
				height:22px;
				text-align: center;
				line-height: 20px;
				font-size:12px;
				color:#333;
				bottom:0;
				right: 5px;
				transition:all .2s ease-out;
				&:after {
					content:">";
					display: block;
					position: absolute;
					line-height: 1em;
					top: -2px;
					right:2px;
					font-size: 18px;
				}
				&:hover {
					background:#ff3c23;
					color:#ffffff;
				}
			}
		}
		.floor_content {
			.content_l {
				width:280px;
				height:570px;
				padding-top:16px;
				position: relative;
				.content_contentener {
					width: 280px;
					height: 180px;
					position: absolute;
					bottom: 0;
					background: black;
					z-index: 998;
					h3 {
						font-size:30px;
						font-weight: bold;
						color:#ffffff;
						margin-top: 10px;
					}
					h4 {
						font-size: 24px;
						color:#ffffff;
						font-weight: bold;
					}
					.trangle {
						position: absolute;
						width: 0;
						height: 0;
						border: {
							top: 50px solid transparent;
							left: 140px solid black;
							bottom: 50px solid black;
							right: 140px solid transparent;
						}
						top: -100px;
					}
					.showmore {
						height: 40px;
						width: 200px;
						border-radius: 100px;
						background: #fff;
						text-align: center;
						font-size:20px;
						color:#ff8bd8;
						line-height: 40px;
						font-weight: bold;
						margin: 18px auto 0;
						cursor: pointer;
					}
				}
				h3 {
					font-size:18px;
					color:#ffffff;
					text-indent: 26px;
				}
				h4 {
					font-size:14px;
					color:#ffffff;
					margin-top: 12px;
					text-indent: 26px;	
				}
				.pic {
					width: 160px;
					height:160px;
					margin:0 auto;
					margin-top: 20px;
				}
				.keywords {
					background:rgba(255,255,255,.2);
					width:280px;
					height:300px;
					position: absolute;
					bottom: 0;
					padding-left: 30px;
					padding-top: 20px;
					ul {
						li {
							background:rgba(255,255,255,.2);
							float:left;
							padding:10px 13px;
							margin-right: 10px;
							margin-bottom: 20px;
							a {
								font-size: 14px;
								color:#fff;
								&:hover {
									text-decoration: underline;
								}
							}
						}
					}
				}
			}
			.content_r {
				width: 902px;
				height: 570px;
				background: #fff;
				border-top: 1px solid #eee;
				float: right;
				ul {
					float: left;
					li {
						padding: 20px 20px 0 20px;
						height:286px;
						float: left;
						width:224px;
						border-bottom:1px solid #eee;
						border-right:1px solid #eee;
						&:nth-of-type(4n) {
							padding-right:30px;
							width: 230px;
						}
						&:last-child {
							padding-right:30px;
							width: 230px;
						}					
						.pic {
							width: 180px;
							height: 180px;
							background: #666;
							position: relative;
							transition: all .2s;
							&:hover {
								.option {
									height: 38px;
									transition: all .2s;
								}
							}
							.option {
								position: absolute;
								width: 100%;
								line-height: 38px;
								background: pink;
								bottom: 0;
								height:0;
								overflow: hidden;
								transition: all .2s;
								.option_upload {
									width: 50%;
									background: rgba(255,126,24,.9);
									text-align: center;
									font-size:13px;
									color:#ffffff;
									cursor: pointer;
									transition: all .2s;
									&:hover {
										background: rgba(255,60,35,.9);
										transition: all .2s;
									}
								}
								.option_download {
									background: rgba(51,51,51,.9);
									width: 50%;
									font-size:13px;
									color:#ffffff;
									cursor: pointer;
									text-align: center;
									transition: all .2s;
									&:hover {
										background: rgba(255,126,24,.9);
										transition: all .2s;
									}
								}
							}
						}
						.price {
							margin-top: 16px;
							line-height: 20px;
							span {
								font-size:20px;
								color:#ff3c23;
								letter-spacing:0;
								margin-right: 12px;
								float:left;
							}
							del {
								font-size:12px;
								color:#999999;
								float:left;
							}
						}
						.title {
							white-space:nowrap; 
							overflow:hidden; 
							text-overflow:ellipsis;
							font-size:12px;
							color:#666666;
							margin-top: 11px;
							a {
								color:#666666;
								&:hover {
									color: #ff3c23;
								}
							}
						}
					}
				}
			}
		}
	}
	.floor_adv {
		background:#e5e5e5;
		height:90px;
		margin-bottom: 23px;
		img {
			width : 100%;
			height:100%;
		}
	}
}