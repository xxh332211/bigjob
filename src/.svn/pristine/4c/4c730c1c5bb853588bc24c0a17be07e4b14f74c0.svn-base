@import '../../common/base';
@import '../../common/reset';
@import '../../component/head';
@import '../../component/foot';
.pay_logo {
    height: 100px;
    .pic {
        background: #666;
        width: 350px;
        height: 80px;
        margin-top: 10px;
        img {
            width: 100%;
        }
    }
    .line {
        height: 35px;
        width: 2px;
        margin-left: 20px;
        margin-right: 20px;
        background: #ccc;
        margin-top: 32px;
    }
    .title {
        font-size: 22px;
        color: #333333;
        line-height: 22px;
        margin-top: 36px;
    }
    .step {
        height: 100px;
        position: relative;
        width: 473px;
        .step_gray {
            position: absolute;
            top: 80%;
            left: 0;
            margin-top: -45px;
            overflow: hidden;
        }
        .step_orange {
            overflow: hidden;
            position: absolute;
            top: 80%;
            left: 0;
            margin-top: -45px;
            transition: all .5s;
            &.step_0 {
                width: 0;
            }
            &.step_1 {
                width: 105px;
            }
            &.step_2 {
                width: 245px;
            }
            &.step_3 {
                width: 385px;
            }
            &.step_4 {
                width: 480px;
            }
        }
    }
}

.pay_state {
    background: #ffffff;
    box-shadow: 0 1px 1px 0 #e5e5e5;
    width: 1200px;
    height: 154px;
    border-top: 4px solid #ffb84e;
    &>div {
        padding-left: 211px;
        margin-top: 20px;
        &:nth-child(1) {
            margin-bottom: 10px;
            position: relative;
            i {
                color: #83ca54;
                width: 26px;
                height: 26px;
                font-size: 26px;
                position: absolute;
                top: 0;
                left: 175px;
            }
            p {
                font-family: MicrosoftYaHei;
                font-size: 22px;
                color: #333333;
                line-height: 22px;
                text-align: left;
            }
        }
        ;
        &:nth-child(2) {
            margin-bottom: 20px;
            p {
                font-family: MicrosoftYaHei;
                font-size: 16px;
                color: #333333;
                line-height: 16px;
                text-align: left;
            }
        }
        &:nth-child(3) {
            .order_num {
                font-family: MicrosoftYaHei;
                font-size: 16px;
                color: #666666;
                line-height: 16px;
                text-align: left;
                span {
                    color: #ffb84e;
                }
            }
            .price {
                font-family: MicrosoftYaHei;
                font-size: 16px;
                color: #666666;
                line-height: 16px;
                text-align: left;
                margin-right: 170px;
                span {
                    font-family: MicrosoftYaHei-Bold;
                    font-size: 22px;
                    color: #ff3c23;
                    line-height: 22px;
                    text-align: left;
                }
            }
        }
    }
}

.pay_content {
    .online_pay {
        border-top: 1px solid #fff;
        margin-top: 25px;
        box-shadow: 0 1px 1px 0 #e5e5e5;
        height: 500px;
        position: relative;
        background: #fff;
        .tip {
            position: absolute;
            top: 25px;
            left: 20px;
            font-size: 12px;
            color: #666666;
        }
        .box {
            margin-top: 25px;
            
            .row {
                background: #ffffff;
                position: relative;
                border: {
                    top: 1px solid #eee;
                    bottom: 1px solid #eee;
                    left: 4px solid transparent;
                    right: 4px solid transparent;
                }
                padding:{
                    top: 3px;
                    bottom: 3px;
                }
                width: 860px;
                height: 60px;
                margin-left: 170px;
                cursor: pointer;
                &.selected {
                    border: 4px solid #ff7e18;
                    padding: 0;
                    i {
                        background: #3a99fc;
                    }
                    .sub_box {
                        display: block;
                    }
                }
                i {
                    width: 16px;
                    height: 16px;
                    border-radius: 100%;
                    border: 1px solid #c6c6c6;
                    line-height: 17px;
                    color:#fff;
                    font-size: 15px;
                    margin-top: 18px;
                    margin-left: 30px;
                }
                .brand {
                    width: 110px;
                    height: 52px;
                    margin-left: 28px;
                }
                .price {
                    font-size: 12px;
                    color: #888888;
                    height: 54px;
                    line-height: 54px;
                    margin-right:30px;
                    span {
                        font-size: 16px;
                        color: #ff3c23;
                    }
                }
                .word {
                    height: 54px;
                    line-height:54px;
                    font-size:12px;
                    color:#888888;
                    text-align:left;
                    margin-right: 30px;
                }
                .sub_box {
                    position: absolute;
                    left: 0;
                    top: 60px;
                    cursor: default;
                    margin-bottom: 10px;
                    margin-top: 10px;
                    display: none;
                    .title {
                        
                        font-size:14px;
                        color:#4a4a4a;
                        margin-bottom:10px;
                    }
                    .input {
                        input {
                            border:1px solid #cccccc;
                            border-radius:2px;
                            width:178px;
                            height:30px;
                            text-indent: 10px;
                            &:focus {
                                border-color: #27cdf2;
                            }
                        }
                        margin-bottom: 10px;
                    }
                    .subbox_tip {
                        margin-bottom: 20px;
                        font-size:12px;
                        color:#999999;
                        line-height:12px;
                    }
                    .btnbox {
                        button {
                            background-image:linear-gradient(-180deg, #fe9a02 0%, #f78400 100%);
                            border: 1px solid #fe9a02;
                            border-radius:2px;
                            width:134px;
                            height:36px;
                            outline: none;
                            cursor: pointer;
                            font-size:16px;
                            color:#ffffff;
                            line-height:36px;
                            text-align:center;
                            
                        }
                    }
                }
            }
        }
    }
}