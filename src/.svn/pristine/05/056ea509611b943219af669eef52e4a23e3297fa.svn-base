body {
    width: 100%;
    height: 100%;
}
html {
    width: 100%;
    height: 100%;
}
.redpack {
    width: 100%;
    height: 100%;
    display: none;
    .cover {
        position: absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
        background: #333;
        filter: Alpha(opacity=5);
        -moz-opacity:0.5;
        opacity:0.5;
    }
    .center {
        width: 374px;
        height: 481px;
        position: absolute;
        top:50%;
        left:50%;
        margin-top: -240px;
        margin-left: 0;
        img {

        }
        .red_price {
            position: absolute;
            top: 290px;
            left: 135px;
            font-size: 50px;
            font-weight: bold;
            line-height: 1em;
            letter-spacing: 0px;
            color: #ffee51;
        }
        .getnow {
            position: absolute;
            display: block;
            top: 386px;
            left: 107px;
            width: 158px;
            height: 40px;
        }
        .close {
            position: absolute;
            top: 41px;
            right: 38px;
            cursor:pointer;
        }
    }
}