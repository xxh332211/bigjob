@import "../../common/reset.scss";
@import "../../common/base.scss";
@import "../../common/iconfont.scss";
// @import "../../common/nanoscroller.scss";
html {
    width: 100%;
    height: 100%;
}
body {
    width: 100%;
    height: 100%;
}
.updata {
    margin: 0 auto;
    margin-top: 500px;
    width: 136px;
    position: fixed;
    right: 30px;
    bottom: 20px;
    .updata_pic {
        width: 136px;
        height: 122px;
        cursor: pointer;
    }
    .updata_window {
        width: 711px;
        height: 490px;
        background: url('../../img/pic/system/updata_bac.png') top center;
        position: absolute;
        left: -800px;
        top: -500px;
        padding:7px;
        padding-top: 61px;
        padding-left: 15px;
        display: none;
        user-select: none;
        z-index: 10;
        .drag {
            height: 61px;
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            cursor: move;
            z-index:1;
        }
        .close {
            position: absolute;
            top:20px;
            right:16px;
            cursor: pointer;
            user-select: none;
            z-index: 2;
            i {
                color: #fff;
            }
        }
        .title {
            width: 658px;
            height: 26px;
            background-color: #eeeeee;
            line-height: 26px;
            text-align: left;
            color: #333333;
            span {
                display: inline-block;
                font-size: 14px;
                font-weight: 500;
                text-align: center;
                &:nth-child(1){
                    width: 100px;
                }
                &:nth-child(2) {
                    width: 90px;
                }
                &:nth-child(3) {
                    width: 150px;
                }
                &:nth-child(4) {
                    width: 200px;
                }
                &:nth-child(5) {
                    width: 100px;
                }
            }
        }
        .nano {
            width: 658px;
            height: 330px;
            position: relative;
            .nano-content {
                padding-top: 0;
                ul {
                    li {
                        height: 33px;
                        width: 658px;
                        border-bottom: 1px solid #eee;
                        line-height: 33px;
                        background: #fff;
                        span {
                            font-size: 13px;
                            font-weight: 500;
                            text-align: left;
                            color: #666666;
                            display: inline-block;
                            text-align: center;
                            &:nth-child(1){
                                overflow: hidden;
                                text-overflow:ellipsis;
                                white-space: nowrap;
                                width :100px;
                                vertical-align: middle;
                            }
                            &:nth-child(2){
                                 width:90px;
                            }
                            &:nth-child(3) {
                                width: 150px;
                            }
                            &:nth-child(4) {
                                width: 200px;
                                overflow: hidden;
                                text-overflow:ellipsis;
                                white-space: nowrap;
                                vertical-align: middle;
                                cursor: pointer;
                            }
                            &:nth-child(5) {
                                width: 100px;
                            }
                        }
                    }
                }
            }
            .nano-pane {
                position: absolute;
                right: 7px;
                background: #eee;
                .nano-slider {
                    background: #f8f8f8;
                }
            }
        }
    }
    .copywindow {
        width: 365px;
        height: 267px;
        position: absolute;
        left: -365px;
        top: -267px;
        textarea {
            width: 100%;
            height: 100%;
        }
    }
}