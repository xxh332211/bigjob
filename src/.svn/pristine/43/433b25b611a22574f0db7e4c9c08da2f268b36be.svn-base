@import '../../common/reset';
@import '../../component/foot.scss';
@import '../../component/head.scss';
@import '../../common/base';
@import '../../common/iconfont';
@import '../../iconcss/icon_1';
.article_title {
    background: #ff7e18;
    width: 1920px;
    height: 90px;
    .article_titlename {
        height: 90px;
        line-height: 90px;
        font-size: 26px;
        color: #ffffff;
        float: left;
        &>.iconfont {
            width: 31px;
            height: 31px;
            font-size: 31px;
            color: #fff;
            vertical-align: middle;
            margin-left: 12px;
        }
    }
    .article_nav {
        font-size: 20px;
        color: #ffffff;
        float: right;
        .article_subnav {
            float: left;
            height: 90px;
            line-height: 90px;
            padding-left: 17px;
            padding-right: 17PX;
            min-width: 115px;
            cursor: pointer;
            text-align: center;
            &:hover {
                background: #ff913b;
            }
        }
    }
}

.nav {
    margin-top: 20px !important;
    margin-bottom: 20px !important;
    font-size: 14px;
    color: #333333;
    a {
        font-size: 14px;
        color: #333333;
    }
}

.article_center {
    .article_sidebar {
        .sidebar_title {
            background: #ff7e18;
            width: 220px;
            height: 74px;
            text-align: center;
            line-height: 74px;
            font-size: 24px;
            color: #ffffff;
        }
        .sidebar_nav {
            background: #ffffff;
            width: 220px;
            min-height: 600px;
            .single_nav {
                border-bottom: 1px solid #e5e5e5;
                padding-bottom: 8px;
                &>.title {
                    padding: 12px 0px 4px 20px;
                    span {
                        font-size: 20px;
                        color: #333333;
                        cursor: pointer;
                        line-height: 20px;
                        height: 20px;
                        display: inline-block;
                    }
                    i {
                        background: #ffffff;
                        border: 1px solid #e5e5e5;
                        width: 15px;
                        height: 15px;
                        text-align: center;
                        line-height: 12px;
                        margin-right: 10px;
                        position: relative;
                        top: -3px;
                        cursor: pointer;
                    }
                }
                &>.dropdown_title {
                    display: none;
                    .sub_title {
                        background: #fff;
                        width: 220px;
                        height: 30px;
                        padding-left: 49px;
                        line-height: 30px;
                        font-size: 14px;
                        color: #333333;
                        cursor: pointer;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        white-space: nowrap;
                        padding-right: 20px;
                        a {
                            font-size: 14px;
                            color: #333333;
                        }
                        &:hover {
                            background: #f6f6f6;
                            color: #ff7e18;
                            padding-left: 45px;
                            border-left: 4px solid #ff7e18;
                            a {
                                color: #ff7e18;
                            }
                        }
                        &.selected {
                            background: #f6f6f6;
                            color: #ff7e18;
                            padding-left: 45px;
                            border-left: 4px solid #ff7e18;
                            a {
                                color: #ff7e18;
                            }
                        }
                    }
                }
            }
        }
    }
    .article_word {
        background: #ffffff;
        width: 960px;
        min-height: 1041px;
        margin-left: 20px;
        padding: 30px;
        overflow: hidden;
        h1 {
            font-size: 26px;
            color: #333333;
            text-align: left;
        }
        .line {
            height: 5px;
            width: 913px;
            background: url('../../../frontV1/img/pic/system/borderline.png') top center;
            margin-top: 15px;
            margin-bottom: 24px;
        }
        .content {
            font-size: 14px;
            color: #666666;
        }
    }
}