@import '../../common/base';
@import '../../common/reset';
@import '../../component/head';
@import '../../component/foot';
@import '../../common/iconfont';
body {
	background:#f2f2f2;
}

.modal_cover {
	position: fixed;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,.5);
	z-index: 999;
	text-align: center;
	line-height: 100%;
	&:before {
		  content: '';
		  display: inline-block;
		  height: 100%;
		  vertical-align: middle;
		  margin-right: -0.25em
	}
	.modal_cotainer {
		padding-top: 20px;
		padding-bottom: 20px;
		background: #fff;
		display: inline-block;
		vertical-align: middle;
		border-radius: 10px;
		div {
			padding-left: 40px;
			padding-right: 40px;
			margin-top: 20px;
			margin-bottom: 20px;
			text-align: left;
		}
		.title {
			font-size:20px;
			color:#ff7e18;
			margin-bottom: 30px;
		}
		.alert {
			padding-top: 10px;
			padding-bottom: 10px;
			font-size:12px;
			color:#ff3c23;
			background: #f5f5f5;
		}
		.paragraph {
			font-size:12px;
			color:#666666;
			line-height:1.5em;
			width: 400px;
		}
		.input {
			span {
				width: 50px;
				font-size:12px;
				color:#666666;
				display: inline-block;
				text-align: justify;
    			text-align-last: justify;
    			margin-right: 5px;
			}
			input {
				background:#ffffff;
				border:1px solid #e5e5e5;
				width:260px;
				height:30px;
				text-indent: 1em;
				margin-left: 10px;
				font-size:12px;
				color:#666666;
			}
		}
		.fullinput {
			position: relative;
			text-align: center;
			input {
				background:#ffffff;
				border:1px solid #e5e5e5;
				width:260px;
				height:30px;
				text-indent: 1em;
				margin-left: 10px;
				font-size:12px;
				color:#666666;
				margin-left: 0;
			}
			.iconfont {
				position: absolute;
				background: black;
				width: 10px;
				height: 10px;
				left: 0;
			}
		}
		.option {
			.btn {
				padding:0;
				.sure {
					float: right;
					border:1px solid #ff7e18;
					padding-top: 10px;
					padding-bottom: 10px;
					cursor: pointer;
					background: #ff7e18;
					font-size:14px;
					color:#ffffff;
					border-radius: 5px;
					margin-left: 40px;
				}
				.cancel {
					float: left;
					border:1px solid #e8e8e8;
					padding-top: 10px;
					padding-bottom: 10px;
					cursor: pointer;
					border-radius: 5px;
				}
				.big {
					width: 263px;
					padding:{
						top : 12px;
						bottom: 12px;
						left:0;
						right: 0;
					}
					text-align: center;
					cursor:pointer;
					background:#ff7e18;
					font-size:14px;
					color:#ffffff;
					border-radius:5px;
					margin-top: 30px;
				}
			}
		}
	}
}

