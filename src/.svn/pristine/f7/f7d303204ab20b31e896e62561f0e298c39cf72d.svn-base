@import '../../common/reset';
@import '../../component/foot.scss';
@import '../../component/head.scss';
@import '../../common/base';
@import '../../common/iconfont';
@import '../../iconcss/icon_1';

.main_part {
    padding-left: 120px;
    padding-top: 10px;
    .tip  {
         font-size:12px;
         color:#666666;
    }
    .row {
        min-height: 55px;
        padding-left:117px;
        .title {
            float: left;
            font-size:12px;
            color:#333333;
            width: 117px;
        }
        .content {
            float:left;
            .chose_box {
                float:left;
                border:1px solid #e5e5e5;
                width:140px;
                height:32px;
                text-align: center;
                line-height: 30px;
                font-size:12px;
                color:#333333;
                position: relative;
                background: #fff;
                cursor: pointer;
                i {
                    color: #fff;
                    position: absolute;
                    right: 0;
                    bottom: -1px;
                    margin-right: 0;
                }
                &.selected {
                    border:2px solid #ff7e18;
                    i {
                        color: #ff7e18;
                    }
                }
                &.small {
                    width: 100px;
                }
            }
        }
    }
}