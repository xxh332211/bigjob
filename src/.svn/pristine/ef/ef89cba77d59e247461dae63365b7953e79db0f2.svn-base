@import '../../common/base';
@import '../../common/reset';
@import '../../component/head';
@import '../../component/foot';
@import '../../common/iconfont';
@import '../../component/modal';
body {
	background:#f2f2f2;
}
.alitong_guide_container {
	width: 1343px;
	margin:0 auto;
	.alitong_buy {
		height: 284px;
		padding : {
			top: 26px;
			bottom: 30px;
			left: 70px;
			right: 70px;
		}
		background: #fff;
		margin-top: 15px;
		.left_pic {
			width: 543px;
			height: 228px;
		}
		.right_info{
			width: 590px;
			height: 228px;
			position: relative;
			.info_title {
				font-size: 19px;
				font-weight: bold;
				margin-top: 7px;
			}
			p {
				font-size: 12px;
				margin-top: 13px;
			}
			.price {
				margin-top: 34px;
				span {
					font-size: 12px;
					color: #7A7A7A;
					b {
						color: #FF7D18;
						font-size: 22px;
						font-weight: bold;
					}
				}
				.title {
				    font-size: 12px;
				    display: inline-block;
				    width: 55px;
				    text-align: justify;
				    text-align-last: justify;
				}
			}
			.keeppay {
				margin-top: 12px;
				color: #7A7A7A;
				span {
					font-size: 12px;
					b {
						color: #FF7D18;
						font-weight: bold;
					}
				}
				.title {
					    font-size: 12px;
					    display: inline-block;
					    width: 55px;
					    text-align: justify;
					    text-align-last: justify;
				}
			}
			.apply {
				height: 46px;
				text-align: right;
				margin-top: 30px;
				position: absolute;
				bottom: 0;
				right: 0;
				span {
					display: inline-block;
					width: 170px;
					height: 46px;
					background: #FF6900;
					font-size: 18px;
					color: #fff;
					line-height: 46px;
					text-align: center;
				}
			}
		}
	}
	.alitong_content {
		margin-top: 15px;
		background: #fff;
		.tab {
			height: 75px;
			padding-top: 14px;
			padding-left: 70px;
			border-bottom: 1px solid #FFAD73;
			.tab_single {
				display: inline-block;
				float: left;
				padding: {
					left:20px;
					right: 20px;
				}
				height: 60px;
				line-height: 60px;
				text-align: center;
				cursor: pointer;
				color: #666666;
				font-weight: bold;
				.iconfont {
					font-size: 30px;
					vertical-align: middle;
				}
				&.active {
					background: #F7F7F7;
					color: #333333;
					.iconfont {
						color : #FF7D17;
					}
				}
			}
		}
		.content {
			padding-bottom: 66px;
			.order_training {
				text-align: center;
				span {
					display: inline-block;
					width: 135px;
					height: 40px;
					color: #fff;
					background: #FF6900;
					line-height: 40px;
					text-align: center;
				}
			}
			.content_class {
				padding-top: 10px;
				padding-bottom: 10px;
				border-bottom: 1px solid #F5F5F5;
				position: relative;
				margin-bottom: 15px;
				&:after {
					content: '';
					display: block;
					width: 56px;
					height: 3px;
					background: #FF6900;
					position: absolute;
					left: 0;
					bottom: -2px;
				}
				span {
					font-size: 18px;
					color: #333333;
				}
				b {
					font-size: 14px;
				}
			}
		}
	}
}