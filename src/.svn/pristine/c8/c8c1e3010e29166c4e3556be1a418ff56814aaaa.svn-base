@import '../../common/reset';
@import '../../component/foot.scss';
@import '../../common/base';
@import '../../common/iconfont';
@import '../../iconcss/icon_1';
body {
	background: #f8f8f8;
}

.banxin {
	width: 1000px;
}

.supplier_main {
	background: #fff;
	padding: {
		top: 20px;
		left: 30px;
	}
	p {
		font-size: 14px;
		color: #333333;
		line-height: 1em;
		margin-bottom: 10px;
	}
	padding-bottom: 80px;
	.content {
		.form_list {
			padding-left: 200px;
			.row {
				height: 35px;
				line-height: 35px;
				margin-bottom: 20px;
				position: relative;
				.chosefile {
					background: #eeeeee;
					width: 60px;
					height: 30px;
					font-size: 12px;
					color: #666666;
					text-align: center;
					line-height: 30px;
					position: absolute;
					left: 255px;
					top: 2px;
					cursor: pointer;
					overflow:hidden;
					&>input {
						width: 200%;
						height: 200%;
						position: absolute;
						top: -100%;
						left: 0;
						background: transparent;
						opacity: 0;
						filter: alpha(opacity=0);
						cursor: pointer;
					}
				}
				.radio {
					border: 1px solid #bdbdbd;
					width: 15px;
					height: 15px;
					line-height: 15px;
					text-align: center;
					border-radius: 100%;
					font-size: 10px;
					color: #fff;
				}
				&.large {
					height: 120px;
				}
				label {
					margin-right: 20px;
					cursor: pointer;
					i {
						margin-right: 3px;
					}
					&.selected {
						.radio {
							background: #3998fc;
						}
					}
				}
				span {
					float: left;
					width: 80px;
					font-size: 12px;
					color: #333333;
				}
				b {
					font-size: 12px;
					color: #333333;
				}
				.star {
					display: inline-block;
					height: 35px;
					line-height: 35px;
					float: left;
					margin-left: 10px;
					color: #ff3c23;
					font-size: 24px;
				}
				&>input {
					float: left;
					background: #ffffff;
					border: 1px solid #e5e5e5;
					width: 238px;
					height: 34px;
					text-indent: 25px;
					font-size: 12px;
					color: #666666;
					&.short {
						width: 80px;
					}
				}
				.subphone {
					float: left;
					input {
						background: #ffffff;
						border: 1px solid #e5e5e5;
						width: 238px;
						height: 34px;
						text-indent: 25px;
						font-size: 12px;
						color: #666666;
						&.short {
							width: 80px;
						}
					}
				}
				textarea {
					background: #ffffff;
					border: 1px solid #e5e5e5;
					width: 348px;
					height: 118px;
					font-size: 12px;
					color: #666666;
					text-indent: 15px;
					padding: 10px;
				}
				button {
					background-image: linear-gradient(-180deg, #fe9a02 0%, #f78400 100%);
					border-radius: 2px;
					width: 120px;
					height: 38px;
					border: none;
					font-size: 16px;
					color: #ffffff;
					outline: none;
					margin-left: 110px;
					cursor: pointer;
				}
				.select {
					width: 120px;
					height: 30px;
					outline: none;
					border: 1px solid #e5e5e5;
					float: left;
					position: relative;
					margin-left: 10px;
					&:first-child {
						margin-left: 0;
					}
					&>.iconfont {
						width: 14px;
						height: 14px;
						position: absolute;
						top: 50%;
						right: 10px;
						font-size: 14px;
						margin-top: -7px;
						color: #7c7c7c;
					}
					.select_head {
						width: 118px;
						height: 28px;
						padding-left: 25px;
						line-height: 33px;
						font-size: 12px;
						color: #333333;
						cursor: pointer;
						background: #fff;
					}
					.select_dropdown {
						background: #fff;
						position: absolute;
						left: -1px;
						top: 29px;
						width: 120px;
						display: none;
						z-index: 999;
						border: {
							left: 1px solid #e5e5e5;
							bottom: 1px solid #e5e5e5;
							right: 1px solid #e5e5e5;
						}
						ul {
							li {
								padding-left: 25px;
								height: 30px;
								color: #333333;
								font-size: 12px;
								position: relative;
								line-height: 30px;
								cursor: pointer;
								&:hover {
									background: #f6f6f6;
									.iconfont {
										color: #f6f6f6;
									}
								}
								.iconfont {
									width: 12px;
									height: 12px;
									font-size: 15px;
									background: #ff3c23;
									color: #fff;
									position: absolute;
									left: 7px;
									top: 50%;
									margin-top: -6px;
									display: none;
								}
								&.selected {
									color: #ff3c23;
									.iconfont {
										display: block;
									}
								}
							}
						}
					}
				}
			}
		}
	}
}