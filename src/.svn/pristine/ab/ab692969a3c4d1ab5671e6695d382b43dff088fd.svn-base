@import '../../common/reset';
@import '../../component/foot.scss';
@import '../../common/base';
@import '../../common/iconfont';
@import '../../iconcss/icon_1';
body {
    background: #fff;
}

.login_head {
    height: 90px;
    padding-top: 5px;
    padding-bottom: 5px;
    .pic {
        width: 200px;
        height: 60px;
        float: left;
        background: pink;
        vertical-align: middle;
        margin-top: 10px;
    }
    .title {
        float: left;
        margin-left: 15px;
        margin-top: 23px;
        p {
            font-size: 24px;
            color: #333333;
        }
    }
}

.login_content {
    background: #ffe6d0;
    min-height: 600px;
    .login_center {
        .pic {
            margin-top: 120px;
            margin-left: 50px;
        }
        .login_form {
            margin-top: 90p x;
            margin-right: 113px;
            background: #ffffff;
            height:541px;
            box-shadow: 0 0 3px 0 #e8e8e8;
            border-radius: 6px;
            width: 370px;
            padding: 20px;
            padding-bottom: 65px;
            position: relative;
            .title {
                font-size: 20px;
                color: #ff7e18;
                margin-bottom: 36px;
                line-height: 1em;
            }
            .double_title {
                line-height: 1em;
                margin-bottom: 36px;
                .buyer_title {
                    font-size: 20px;
                    color: #ff7e18;
                    float: left;
                    margin-left: 35px;
                    cursor: pointer;
                }
                .subline {
                    border: 1px solid #ffe6d0;
                    width: 1px;
                    height: 25px;
                    position: relative;
                    top: -4px;
                    float: left;
                    margin-left: 30px;
                    margin-right: 30px;
                }
                .supplyer_title {
                    font-size: 20px;
                    color: #333333;
                    float: left;
                    cursor: pointer;
                }
            }
            .notice {
                background: #fff0f0;
                border: 1px solid #ff5554;
                width: 330px;
                height: 20px;
                position: absolute;
                line-height: 17px;
                top: 55px;
                left: 20px;
                padding-left: 10px;
                i {
                    background: #ff3c23;
                    width: 14px;
                    height: 14px;
                    border-radius: 100%;
                    color: #fff;
                    line-height: 14px;
                    text-align: center;
                    vertical-align: middle;
                }
                .word {
                    font-size: 10px;
                    color: #ff3110;
                }
            }
            .fullinput {
                position: relative;
                margin-bottom: 20px;
                &.focus {
                    input {
                        border-color: #27b9f2;
                    }
                }
                &.error {
                    input {
                        border-color: #ff3c23;
                    }
                }
                input {
                    background: #ffffff;
                    border: 1px solid #e5e5e5;
                    width: 330px;
                    height: 42px;
                    text-indent: 60px;
                }
                i {
                    width: 20px;
                    height: 19px;
                    font-size: 19px;
                    color: #cccccc;
                    position: absolute;
                    top: 12px;
                    left: 12px;
                }
                .getcode {
                    position: absolute;
                    top: 0;
                    right: 0;
                    margin-top: 2px;
                    margin-right: 2px;
                    button {
                        background: #ff9c00;
                        width: 82px;
                        height: 38px;
                        font-size: 12px;
                        color: #ffffff;
                        border: none;
                        outline: none;
                        cursor: pointer;
                    }
                }
                .getcomfirm {
                    position: absolute;
                    right: 0;
                    top: 0;
                    background: #eeeeee;
                    width: 82px;
                    height: 38px;
                    margin-top: 2px;
                    margin-right: 2px;
                    line-height: 38px;
                    text-align: center;
                    user-select: none;
                    span {
                        font-size: 18px;
                        color: #999999;
                    }
                    img {
                        width: 100%;
                        height: 100%;
                    }
                }
            }
            .check_protocol {
                user-select: none;
                margin-bottom: 20px;
                p {
                    margin-bottom: 3px;
                    i {
                        background: #ffffff;
                        border: 1px solid #eeeeee;
                        width: 16px;
                        height: 16px;
                        color: #fff;
                        vertical-align: middle;
                        margin-right: 5px;
                        margin-top: -2px;
                        cursor: pointer;
                    }
                    &:nth-child(1) {
                        font-size: 12px;
                        color: #666666;
                        line-height: 1em;
                        span {
                            color: #ff7e18;
                            cursor: pointer;
                        }
                    }
                    &:nth-child(2) {
                        padding-left: 104px;
                        font-size: 12px;
                        color: #666666;
                        line-height: 1em;
                        span {
                            color: #ff7e18;
                            cursor: pointer;
                        }
                    }
                }
                &.selected {
                    p {
                        i {
                            color: #1ab4f2;
                            font-weight: bold;
                        }
                    }
                }
            }
            .login_btn {
                button {
                    background: #ff7e18;
                    border-radius: 2px;
                    width: 330px;
                    height: 42px;
                    color: #fff;
                    line-height: 42px;
                    text-align: center;
                    font-size: 20px;
                    color: #ffffff;
                    border: none;
                    outline: none;
                    cursor: pointer;
                    &:active {
                        background: #f86f02;
                    }
                }
                &.disable {
                    button {
                        background: #bdbdbd;
                    }
                }
            }
            .tag {
                margin-top: 10px;
                a {
                    font-size: 12px;
                    color: #ff7e18;
                }
            }
        }
    }
}

.foot {
    .foot_bottom {
        height: 200px;
        background: #fff;
        color: #333;
        font-size: 14px;
        padding-top: 15px;
        a {
            color: #333;
            font-size: 14px;
        }
        dl {
            dt {
                float: left;
            }
            dd {
                float: left;
                margin-left: 30px;
            }
        }
        ul {
            margin-top: 18px;
            li {
                float: left;
                padding: 0 20px;
                border-right: 1px solid #333;
                line-height: 1em;
                &:first-child {
                    padding-left: 0;
                }
                &:last-child {
                    padding-right: 0;
                    border-right: 0;
                }
            }
        }
        .copyright {
            margin-top: 18px;
            span {
                margin-right: 30px;
            }
        }
        .pic {
            width: 114px;
            height: 41px;
            margin-top: 20px;
            img {
                width: 100%;
                height: 100%;
            }
        }
    }
}