@import '../../common/reset';
@import '../../component/foot.scss';
@import '../../common/base';
@import '../../common/iconfont';
@import '../../iconcss/icon_1';

.article_title {
    background:#ff7e18;
    width:1920px;
    height:90px;
    .article_titlename {
        height: 90px;
        line-height: 90px;
        font-size:26px;
        color:#ffffff;
        float: left;
        &>.iconfont {
            width: 31px;
            height: 31px;
            font-size: 31px;
            color: #fff;
            vertical-align: middle;
            margin-left: 12px;
        }
    }
    .article_nav {
        font-size:20px;
        color:#ffffff;
        float: right;
        .article_subnav {
            float: left;
            height: 90px;
            line-height: 90px;
            padding-left: 17px;
            padding-right: 17PX;
            min-width:115px;
            cursor: pointer;
            text-align: center;
            &:hover {
                background: #ff913b;
            }
        }
    }
}